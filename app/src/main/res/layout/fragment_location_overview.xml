<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.ui.attractions_presentation.LocationOverviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_large"
            android:background="@color/backgroundOpacity"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingHorizontal="@dimen/padding_normal"
            android:paddingVertical="@dimen/padding_small">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_app_title"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/text_places_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textFontWeight="300" />
            </LinearLayout>
            <Button
                android:rotation="270"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_back" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>