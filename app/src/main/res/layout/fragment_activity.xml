<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/white"
    tools:context=".src.ui.main.ActivityFragment">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_app_bar">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackOpacity"
            android:text="@string/page_activity"
            android:textSize="@dimen/font_size_app_title"
            android:textStyle="bold"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewActivity"
            android:padding="@dimen/padding_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include layout="@layout/loading_normal"/>
    </RelativeLayout>
</LinearLayout>