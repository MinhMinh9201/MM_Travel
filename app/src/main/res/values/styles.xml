<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/btnGradientBlue</item>"
        <item name="android:textViewStyle">@style/textViewStyleBlack</item>
        <item name="editTextStyle">@style/editorStyleNormal</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorRedAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="editorStyleNormal" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/border_editor_selector</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textViewStyleBlack" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>

    <style name="textViewStyleError" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorRedAccent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>

    <style name="btnGradientBlue" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@drawable/btn_gradient_blue_selector</item>
    </style>

    <style name="btnGradientRed" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_gradient_red_selector</item>
    </style>

</resources>